{
  "format_version": "1.12.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:ender_crystal",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "crystal_exploding": {
        "minecraft:explode": {
          "fuse_length": 0,
          "fuse_lit": true,
          "power": 1.5,
          "causes_fire": false,
          "destroy_affected_by_griefing": true
        }
      }
    },

    "components": {
      "minecraft:collision_box": {
        "width": 0.98,
        "height": 0.98
      },
      "minecraft:health": {
        "value": 1,
        "max": 1
      },
      "minecraft:fire_immune": true,
      "minecraft:on_hurt": {
        "event": "minecraft:crystal_explode",
        "target": "self"
      },
	    "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },

    "events": {
      "minecraft:crystal_explode": {
        "remove": {
        },
        "add": {
          "component_groups": [
            "crystal_exploding"
          ]
        },
        "run_command":{
          "command" : [
          "scoreboard players set @s forward_explode 1",
          "scoreboard players set @s behind_explode 1",
          "scoreboard players set @s left_explode 1",
          "scoreboard players set @s right_explode 1",
          "scoreboard players set @s up_explode 1",
          "scoreboard players set @s down_explode 1",
          "execute @s ~~~ detect ~ ~ ~1 bedwars:red_stained_glass2 0 scoreboard players set @s forward_explode 0",
          "execute @s ~~~ detect ~ ~ ~-1 bedwars:red_stained_glass2 0 scoreboard players set @s behind_explode 0",
          "execute @s ~~~ detect ~1 ~ ~ bedwars:red_stained_glass2 0 scoreboard players set @s left_explode 0",
          "execute @s ~~~ detect ~-1 ~ ~ bedwars:red_stained_glass2 0 scoreboard players set @s right_explode 0",
          "execute @s ~~~ detect ~ ~1 ~ bedwars:red_stained_glass2 0 scoreboard players set @s up_explode 0",
          "execute @s ~~~ detect ~ ~-1 ~ bedwars:red_stained_glass2 0 scoreboard players set @s down_explode 0",
          "execute @s ~~~ detect ~ ~ ~1 bedwars:blue_stained_glass2 0 scoreboard players set @s forward_explode 0",
          "execute @s ~~~ detect ~ ~ ~-1 bedwars:blue_stained_glass2 0 scoreboard players set @s behind_explode 0",
          "execute @s ~~~ detect ~1 ~ ~ bedwars:blue_stained_glass2 0 scoreboard players set @s left_explode 0",
          "execute @s ~~~ detect ~-1 ~ ~ bedwars:blue_stained_glass2 0 scoreboard players set @s right_explode 0",
          "execute @s ~~~ detect ~ ~1 ~ bedwars:blue_stained_glass2 0 scoreboard players set @s up_explode 0",
          "execute @s ~~~ detect ~ ~-1 ~ bedwars:blue_stained_glass2 0 scoreboard players set @s down_explode 0",
          "execute @s[scores={forward_explode=1}] ~~~ fill ~2 ~2 ~2 ~-2 ~-2 ~1 air 0 replace bedwars:player_red_wool",
          "execute @s[scores={forward_explode=1}] ~~~ fill ~2 ~2 ~2 ~-2 ~-2 ~1 air 0 replace bedwars:player_blue_wool",
          "execute @s[scores={forward_explode=1}] ~~~ fill ~2 ~2 ~2 ~-2 ~-2 ~1 air 0 replace bedwars:player_end_stone",
          "execute @s[scores={forward_explode=1}] ~~~ fill ~2 ~2 ~2 ~-2 ~-2 ~1 air 0 replace bedwars:player_planks",
          "execute @s[scores={behind_explode=1}] ~~~ fill ~2 ~2 ~-2 ~-2 ~-2 ~-1 air 0 replace bedwars:player_red_wool",
          "execute @s[scores={behind_explode=1}] ~~~ fill ~2 ~2 ~-2 ~-2 ~-2 ~-1 air 0 replace bedwars:player_blue_wool",
          "execute @s[scores={behind_explode=1}] ~~~ fill ~2 ~2 ~-2 ~-2 ~-2 ~-1 air 0 replace bedwars:player_end_stone",
          "execute @s[scores={behind_explode=1}] ~~~ fill ~2 ~2 ~-2 ~-2 ~-2 ~-1 air 0 replace bedwars:player_planks",
          "execute @s[scores={left_explode=1}] ~~~ fill ~2 ~2 ~-2 ~1 ~-2 ~2 air 0 replace bedwars:player_red_wool",
          "execute @s[scores={left_explode=1}] ~~~ fill ~2 ~2 ~-2 ~1 ~-2 ~2 air 0 replace bedwars:player_blue_wool",
          "execute @s[scores={left_explode=1}] ~~~ fill ~2 ~2 ~-2 ~1 ~-2 ~2 air 0 replace bedwars:player_end_stone",
          "execute @s[scores={left_explode=1}] ~~~ fill ~2 ~2 ~-2 ~1 ~-2 ~2 air 0 replace bedwars:player_planks",
          "execute @s[scores={right_explode=1}] ~~~ fill ~-1 ~2 ~-2 ~-2 ~-2 ~2 air 0 replace bedwars:player_red_wool",
          "execute @s[scores={right_explode=1}] ~~~ fill ~-1 ~2 ~-2 ~-2 ~-2 ~2 air 0 replace bedwars:player_blue_wool",
          "execute @s[scores={right_explode=1}] ~~~ fill ~-1 ~2 ~-2 ~-2 ~-2 ~2 air 0 replace bedwars:player_end_stone",
          "execute @s[scores={right_explode=1}] ~~~ fill ~-1 ~2 ~-2 ~-2 ~-2 ~2 air 0 replace bedwars:player_planks",
          "execute @s[scores={up_explode=1}] ~~~ fill ~2 ~1 ~-2 ~-2 ~2 ~2 air 0 replace bedwars:player_red_wool",
          "execute @s[scores={up_explode=1}] ~~~ fill ~2 ~1 ~-2 ~-2 ~2 ~2 air 0 replace bedwars:player_blue_wool",
          "execute @s[scores={up_explode=1}] ~~~ fill ~2 ~1 ~-2 ~-2 ~2 ~2 air 0 replace bedwars:player_end_stone",
          "execute @s[scores={up_explode=1}] ~~~ fill ~2 ~1 ~-2 ~-2 ~2 ~2 air 0 replace bedwars:player_planks",
          "execute @s[scores={down_explode=1}] ~~~ fill ~2 ~-1 ~-2 ~-2 ~-2 ~2 air 0 replace bedwars:player_red_wool",
          "execute @s[scores={down_explode=1}] ~~~ fill ~2 ~-1 ~-2 ~-2 ~-2 ~2 air 0 replace bedwars:player_blue_wool",
          "execute @s[scores={down_explode=1}] ~~~ fill ~2 ~-1 ~-2 ~-2 ~-2 ~2 air 0 replace bedwars:player_end_stone",
          "execute @s[scores={down_explode=1}] ~~~ fill ~2 ~-1 ~-2 ~-2 ~-2 ~2 air 0 replace bedwars:player_planks"
          ],
          "target" : "self"
        }
      }
    }

  }
}
